@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<ul>
@if (Model.Count != 0)
  {
    <h2>Stylists</h2>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", "Stylists", new { id = stylist.StylistId})</li>
    }
  }
  else
  {
    <h2>No Stylists Found</h2>
  }
</ul>